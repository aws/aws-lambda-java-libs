<settings>
    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <file>
                    <exists>dev-maven-repo.mk</exists>
                </file>
            </activation>
            <repositories>
                <repository>
                    <id>dev-snapshot-repo</id>
                    <url>${env.MAVEN_REPO_URL}</url>
                </repository>
            </repositories>
        </profile>
    </profiles>
    <servers>
        <server>
            <id>dev-snapshot-repo</id>
            <username>${env.MAVEN_REPO_USERNAME}</username>
            <password>${env.MAVEN_REPO_PASSWORD}</password>
        </server>
    </servers>
</settings>
